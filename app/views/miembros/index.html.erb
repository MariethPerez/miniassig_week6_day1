<p id="notice"><%= notice %></p>

<h1>Miembros</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @miembros.each do |miembro| %>
      <tr>
        <td><%= miembro.name %></td>
        <td><%= miembro.telefono %></td>
        <td><%= miembro.direccion %></td>
        <td><%= link_to 'Show', miembro %></td>
        <td><%= link_to 'Edit', edit_miembro_path(miembro) %></td>
        <td><%= link_to 'Destroy', miembro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

